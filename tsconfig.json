{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "plugins": [
            {
              "name": "ts-graphql-plugin",
              "schema": "src/__generated__/gatsby-schema.graphql",
              "tag": "graphql"
            }
          ]
    },
    "include": [
      "packages/gatsby-theme-newrelic/src/**/*",
      "packages/gatsby-theme-newrelic/gatsby/**/*",
    ],
    "exclude": ["node_modules", "packages/gatsby-theme-newrelic/gatsby-*.js"]
}
